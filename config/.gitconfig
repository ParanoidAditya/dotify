[user]
	name = Aditya Sharma
	email = hello@adi.run

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[core]
	editor = nano
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol, space-before-tab
	excludesfile = ~/.gitignore
	
[commit]
	gpgsign = true

[web]
	browser = chrome

[rerere]
	enabled = 1
	autoupdate = 1

[push]
	default = simple

[color]
	ui = auto

[help]
	autocorrect = 1

[credential]
	helper = osxkeychain

[diff]
	algorithm = patience
[protocol]
	version = 2
